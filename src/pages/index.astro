---
// src/pages/index.astro
const name = "Nick Merritt";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{name}</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, sans-serif;
        background: #FAFAFA;
        color: #000;
        padding: 40px 20px;
        line-height: 1.5;
      }

      .container {
        max-width: 900px;
        margin: 0 auto;
      }

      header {
        margin-bottom: 60px;
      }

      h1 {
        font-size: 24px;
        font-weight: 400;
        margin-bottom: 8px;
      }

      .bio {
        font-size: 15px;
        color: #666;
        max-width: 500px;
      }

      .section {
        margin-bottom: 50px;
      }

      .section-title {
        font-size: 13px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #999;
        margin-bottom: 20px;
        font-weight: 500;
      }

      .link-list {
        list-style: none;
      }

      .link-list li {
        margin-bottom: 12px;
      }

      .link-list a {
        font-size: 15px;
        color: #000;
        text-decoration: none;
        border-bottom: 1px solid transparent;
        transition: border-color 0.2s;
      }

      .link-list a:hover {
        border-bottom-color: #000;
      }

      footer {
        margin-top: 80px;
        padding-top: 20px;
        border-top: 1px solid #E0E0E0;
        font-size: 13px;
        color: #999;
      }

      @media (max-width: 600px) {
        body {
          padding: 30px 16px;
        }

        h1 {
          font-size: 20px;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <header>
        <h1>{name}</h1>
        <p class="bio">Developer, designer, artist</p>
      </header>

      <main>
        <section class="section">
          <h2 class="section-title">Channels</h2>
          <ul class="link-list">
            <li><a href="#">Project Name</a></li>
            <li><a href="#">Another Project</a></li>
            <li><a href="#">Experiments</a></li>
            <li><a href="#">Archive</a></li>
          </ul>
        </section>

        <section class="section">
          <h2 class="section-title">Links</h2>
          <ul class="link-list">
            <li><a href="https://are.na/burdbone-goodeyemedia" target="_blank">Are.na</a></li>
            <li><a href="https://github.com/nickmerritt-dev" target="_blank">GitHub</a></li>
            <li><a href="mailto:your@email.com">Email</a></li>
          </ul>
        </section>
      </main>

      <footer>
        Â© 2025 {name}
      </footer>
    </div>
  </body>
</html>